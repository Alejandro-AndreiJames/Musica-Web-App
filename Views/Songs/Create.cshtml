@model Musica_Web_App.Models.Song

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Song</h4>
<hr />
<div style="max-width: 500px; background: #fff; border-radius: 18px; box-shadow: 0 2px 12px rgba(59,186,156,0.08); padding: 2em; margin-bottom: 2em;">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="SongQuestion" class="control-label"></label>
            <input asp-for="SongQuestion" class="form-control" />
            <span asp-validation-for="SongQuestion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SongAnswer" class="control-label"></label>
            <input asp-for="SongAnswer" class="form-control" />
            <span asp-validation-for="SongAnswer" class="text-danger"></span>
        </div>
        <div style="display: flex; gap: 1em;">
            <button type="submit" class="btn-action">Create</button>
            <a asp-action="Index" class="btn-action" style="background: #eee; color: #3BBA9C;">Back</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
