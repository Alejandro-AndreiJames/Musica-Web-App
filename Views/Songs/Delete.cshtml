@model Musica_Web_App.Models.Song

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h4>Are you sure you want to delete this?</h4>
<hr />
<div style="max-width: 500px; background: #fff; border-radius: 18px; box-shadow: 0 2px 12px rgba(59,186,156,0.08); padding: 2em; margin-bottom: 2em;">
    <dl class="row">
        <dt class="col-sm-4">Song Question</dt>
        <dd class="col-sm-8">@Model.SongQuestion</dd>
        <dt class="col-sm-4">Song Answer</dt>
        <dd class="col-sm-8">@Model.SongAnswer</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div style="display: flex; gap: 1em;">
            <button type="submit" class="btn-action">Delete</button>
            <a asp-action="Index" class="btn-action" style="background: #eee; color: #3BBA9C;">Back</a>
        </div>
    </form>
</div>
